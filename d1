FROM ubuntu
MAINTAINER Abrahem abrahem_gh@yahoo.com

#environment variables
ENV GITURL=https://github.com/AbrahemGh1/example2.git
ENV APPNAME=timeApp.jar

RUN apt-get update

#install java
RUN apt-get -y install default-jre

#install git
RUN apt-get -y install git

#pull jar file from git to application dir 
RUN mkdir application
WORKDIR "/application"
#RUN touch logfile.txt
RUN git init
RUN git pull $GITURL

#run the jar file
CMD exec java -jar "$APPNAME"

EXPOSE 8081

